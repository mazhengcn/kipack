{
    "name": "KiPack Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    // ðŸ‘‡ Features to add to the Dev Container. More info: https://containers.dev/implementors/features.
    "features": {
        "ghcr.io/devcontainers/features/git:1": {},
        "ghcr.io/mazhengcn/devcontainer-features/starship:1": {}
    },
    // ðŸ‘‡ Configure tool-specific properties.
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/kipackenv/bin/python"
            },
            "extensions": [
                "aaron-bond.better-comments",
                "bungcip.better-toml",
                "GitHub.copilot",
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "yzhang.markdown-all-in-one"
            ]
        }
    },
    "runArgs": [
        "--name=kipack",
        "--gpus=all",
        "--shm-size=1gb"
    ],
    "mounts": [
        {
            "source": "kipack_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "postCreateCommand": "python -m pip install -e '.[dev]'"
}
