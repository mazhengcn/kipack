{
    "name": "Kipack",
    "image": "ghcr.io/zyresearch/devcontainers/kipack:latest",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "charliesmarsh.ruff"
            ]
        }
    },
    "runArgs": [
        "--name=kipack",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "mounts": [
        {
            "source": "kipack_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "postCreateCommand": "pip install -e ."
}