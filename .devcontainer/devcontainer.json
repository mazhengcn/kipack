{
    "name": "KiPack Dev Container",
    "build": {
        "dockerfile": "Dockerfile"
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "configureZshAsDefaultShell": true,
            "username": "none"
        }
    },
    "runArgs": [
        "--name=kipack",
        "--gpus=all",
        "--shm-size=1gb"
    ],
    "mounts": [
        {
            "source": "kipack_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "python.defaultInterpreterPath": "/opt/kipackenv/bin/python"
            },
            "extensions": [
                "ms-python.black-formatter",
                "ms-python.flake8",
                "ms-python.isort",
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-toolsai.jupyter",
                "GitHub.copilot"
            ]
        }
    },
    "postCreateCommand": "pip install -e '.[dev]'"
}