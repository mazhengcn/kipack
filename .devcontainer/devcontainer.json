{
    "name": "Kipack",
    "build": {
        "dockerfile": "Dockerfile",
        "context": "."
    },
    "features": {
        "ghcr.io/devcontainers/features/common-utils:2": {
            "username": "jax"
        }
    },
    "mounts": [
        {
            "source": "kipack_data",
            "target": "${containerWorkspaceFolder}/data",
            "type": "volume"
        }
    ],
    "runArgs": [
        "--name=kipack",
        "--gpus=all",
        "--shm-size=1g"
    ],
    "postCreateCommand": "python -m pip install -e .",
    "customizations": {
        "vscode": {
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "ms-python.black-formatter",
                "charliesmarsh.ruff",
                "ms-toolsai.jupyter"
            ]
        }
    },
    "remoteUser": "root"
}